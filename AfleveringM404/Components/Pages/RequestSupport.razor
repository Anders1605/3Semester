@rendermode InteractiveServer
@page "/requestsupport"
@using Models
@using Services
@inject CosmosDBService cosmosService

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <h3 class="card-title mb-4">Request Support</h3>

            <EditForm Model="@message" OnValidSubmit="SubmitSupportRequest" FormName="SubmitMessage">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger mb-3" />

                <div class="mb-3">
                    <label class="form-label">Contact Name</label>
                    <InputText class="form-control" @bind-Value="message.Contact" placeholder="Enter your name" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <InputText class="form-control" @bind-Value="message.ContactEmail" placeholder="Enter your email" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Phone</label>
                    <InputText class="form-control" @bind-Value="message.ContactPhoneNumber" placeholder="Enter phone number" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Category</label>
                    <InputSelect class="form-select" @bind-Value="message.Category">
                        <option value="">-- Select Category --</option>
                        @foreach (var c in categories)
                        {
                            <option value="@c">@c</option>
                        }
                    </InputSelect>
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <InputTextArea class="form-control" @bind-Value="message.Description" rows="3" placeholder="Describe your issue..." />
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </EditForm>

            @if (showConfirmation)
            {
                <div class="alert alert-success mt-3 mb-0 text-center">
                    ✅ Support request submitted successfully!
                </div>
            }
        </div>
    </div>
</div>

@code {
    private SupportMessage message = new SupportMessage();
    private bool showConfirmation = false;

    private List<string> categories = new()
    {
        "Sales",
        "Defects",
        "Repair",
        "Billing",
        "Other"
    };

    protected override void OnInitialized()
    {
        message = new SupportMessage();
        showConfirmation = false;
    }

    private async Task SubmitSupportRequest()
    {
        await cosmosService.CreateNewSupportMessage(message);
        showConfirmation = true;
        message = new SupportMessage(); // reset form
    }
}
